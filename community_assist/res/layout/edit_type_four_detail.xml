<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/layout_space_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/space_title_bar"
        android:gravity="center_vertical" >

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/common_title_bar_color"
            android:onClick="backoff"
            android:src="@drawable/close_page" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="社群活动详情"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/edit_edit_type_1_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:text="保存"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_four_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_space_title_bar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_share_edittext"
        android:gravity="left"
        android:hint="产品名字..."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_four_content"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/edit_four_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_share_edittext"
        android:gravity="left"
        android:hint="活动简介..."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_four_oldprice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_four_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_share_edittext"
        android:gravity="left"
        android:hint="原价..."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_four_newprice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_four_oldprice"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_share_edittext"
        android:gravity="left"
        android:hint="现价..."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_four_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_four_newprice"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_share_edittext"
        android:gravity="left"
        android:hint="地址..."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/one_type_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edit_four_address"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/deepgray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one_type_line"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/edit_one_img0"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/add_act_img" />

        <ImageView
            android:id="@+id/edit_one_img1"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/add_act_img" />
    </LinearLayout>

</RelativeLayout>